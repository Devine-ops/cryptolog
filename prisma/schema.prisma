generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int          @id @default(autoincrement())
  name            String
  email           String       @unique
  password        String
  dateOfBirth     DateTime
  nationality     String
  phone           String
  documentType    DocumentType
  documentNumber  String
  imgDocument     String
  completeAddress String
  postalCode      String
  state           String
  country         String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

enum DocumentType {
  DRIVER_LICENSE
  IDENTITY_CARD
  PASSPORT
}
